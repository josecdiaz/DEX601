<aura:component implements="flexipage:availableForRecordHome, force:hasRecordId" access="global">
	<aura:attribute name="simpleRecord" type="Contact" access="private" />
	<force:recordData aura:Id="recordHandler" recordId="{!v.recordId}" fields="Phone"
		targetFields="{!v.simpleRecord}" />

	<lightning:card>
		<c:DialButton phoneNumber="{!v.simpleRecord.Phone}"/>
	</lightning:card>
 
</aura:component>